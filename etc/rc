. /etc/rc.conf

echo
echo
echo "         Morpheus"
echo
echo

echo Mounting filesystems
mkdir -p /dev/pts /dev/shm
mkdir -p /sys
mkdir -p /proc
mount -n -t proc proc /proc
mount -n -t sysfs sysfs /sys
mount -n -t devpts devpts /dev/pts

echo Running smdev
smdev -s

echo /bin/smdev > /proc/sys/kernel/hotplug

hostname $HOSTNAME

HWCLOCK_PARAMS="-s"
case $HARDWARECLOCK in
	"")
		;;
	UTC)
		HWCLOCK_PARAMS="${HWCLOCK_PARAMS} -u"
		;;
	localtime)
		HWCLOCK_PARAMS="${HWCLOCK_PARAMS} -l"
		;;
	*)
		HWCLOCK_PARAMS=""
		;;
esac

if [ -n "$HWCLOCK_PARAMS" ]; then
	echo Setting hwclock
	[ -n "$TIMEZONE" ] && export TZ="$TIMEZONE"
	hwclock $HWCLOCK_PARAMS
	unset TZ
fi

if [ -x /etc/dropbearkeys ]; then
	/etc/dropbearkeys
fi
chmod 644 /etc/dropbearkeys

for s in $SVC; do
	echo Starting $s
	/etc/rc.d/$s start
done
